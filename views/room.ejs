<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room</title>
    
    <link rel="stylesheet" type="text/css" href="style.css">
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
   <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>

    <script  src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>

        const ROOM_ID="<%= roomId %>";
      
        $(document).ready(function(){
  $("#chat").click(function(){
    $("#chatbox").toggle();
   //  $("#chat").css("color","green").toggle();
  });
})

$(document).ready(function(){
  $("#share").click(function(){
    $("#sharescreen").toggleClass("share");
   
  });
})

$(document).ready(function(){
  $("#details").click(function(){
    $("#detail").toggleClass("detail");
   

  });
})

function goBack() {
  window.history.back();
}


function copy() {
  var copyT = document.getElementById("copy").innerHTML;
 copyText(copyT);
 

}

function copyText(text) {
  navigator.clipboard.writeText(text);
  alert("Text copied")
}




$(document).ready(function(){
  $("#details").click(function(){
    $("#detailss").toggle();
   
  });
})

// $(document).ready(function() {
//   $('.main_videos').mousewheel(function(e, delta) {
//     this.scrollLeft -= (delta * 40);
//     e.preventDefault();
//   });
// });
    </script>
    <style>
       .share{
          color:rgb(73, 231, 73);
       }

       .detail{
          color:rgb(105, 105, 221);
       }
      
       
    
    </style>
</head>
<body style="background-color: black;">
    <div class="main">
        <div class="main__left">
           <div class="main__videos">
              <div id="video-grid">
        
              </div>
           </div>

           <div id="screen-grid">

           </div>
           <div class="main__controls">
              <div class="main__controls__block">
                 <div onclick="muteUnmute()" class="main__controls__button main__mute_button">
                    <i class="fas fa-microphone"></i>
                    <span>Mute</span>
                 </div>
                 <div onclick="playStop()" class="main__controls__button main__video_button" >
                    <i class="fas fa-video"></i>
                    <span>Stop Video</span>
                 </div>
              </div>
              <div class="main__controls__block">
               <div class="main__controls__button"  id="details"  >
                  <i class="fas fa-shield-alt" id="detail" ></i>
                  <span>Details</span>
               </div>
                 

                 <div class="main__controls__button" id="share" onClick="shareScreen()">
                  <i class="fas fa-desktop" id="sharescreen"></i>
                  <span>Share Screen</span>
               </div>

               <div class="main__controls__button" id="chat">
                  <i class="fas fa-comment-alt"  ></i>
                  <span>Chat</span>
               </div>
              </div>
              <div class="main__controls__block">
                 <div class="main__controls__button">
                   <button type="button" class="btn btn-danger" onClick="goBack()">Leave Meeting</button>
                 </div>
              </div>
           </div>
           <div class=" mt-5 ml-5" id="detailss"  >
              <div class="container">
                  <div class="row justify-content-center ml-2 mt-5">
                     <div class="col-lg-12 mt-5  justify-content-center">
                        <h3 style="color: aliceblue;">Share this meeting link with others you want in the meeting</h3>
                        <div class="row">
                        <div class="col-lg-10">   
                        <div style="background-color:#dadce0;height: 58px;border-radius: 8px;">
                           <h2  style="margin-left:3%" class="mt-5 pt-2"><p id="copy"><%= roomId %></p> </h2>
                        </div>
                     </div>
                     <div class="col-lg-2">
                       <h2  class="mt-5 pt-2" style="color: #dadce0;"> <i class="fa fa-copy" onClick="copy()" style="cursor: pointer;"></i></h2>
                     </div>
                     </div>


                     <div class="row mt-5 ml-3">
                        <div class="col-lg-2 mt-5">
                          <h2 ><i  class="fas fa-shield-alt ml-5" style="color: rgb(0, 110, 255); font-size: 30px;;"></i></h2> 
                        </div>

                        <div class="col-lg-8 mt-5">
                           <h4 style="color: aliceblue;">People who use this meeting link must get your permission beffore they join</h4>
                         </div>
                     </div>
                     </div>
                  </div>
             </div>
         </div>
        </div>
        
      
        <div class="main__right" id="chatbox">
           <div class="main__header">
              <h6>Chat</h6>
           </div>
           <div class="main__chat_window">
              <ul class="messages">
                 
              </ul>
  
           </div>
           <div class="main__message_container">
              <input id="chat_message" type="text" style="border: none;" placeholder="Type message here...">
           </div>
        </div>
      </div>

    
    
    <script src="javascript.js"></script>
   
</body>

</html>